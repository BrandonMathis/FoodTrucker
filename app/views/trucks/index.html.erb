<h1>Listing trucks</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Name</th>
    <th>Description</th>
    <th>Food type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trucks.each do |truck| %>
  <tr>
    <td><%= truck.location %></td>
    <td><%= truck.latitude %></td>
    <td><%= truck.longitude %></td>
    <td><%= truck.name %></td>
    <td><%= truck.description %></td>
    <td><%= truck.food_type %></td>
    <td><%= link_to 'Show', truck %></td>
    <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
    <td><%= link_to 'Destroy', truck, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

